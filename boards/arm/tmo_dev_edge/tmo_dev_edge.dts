/dts-v1/;
#include <silabs/efm32pg12b500f1024gl125.dtsi>
#include <dt-bindings/pwm/pwm.h>
#include "dts/arm/silabs/tmo_dev_edge-pinctrl.dtsi"

/ {
    model = "Silicon Labs EFM32PG STK3402A board";
    compatible = "tmo,dev_edge";
    
    chosen {
        zephyr,console = &usart0;
        zephyr,shell-uart = &usart0;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,sflash = &w25q64;
        watchdog0 = &wdog0;
        watchdog1 = &wdog1;
    };

    /* These aliases are provided for compatibility with samples */
    aliases {
        led0 = &led0;
        led1 = &led1;
        led2 = &led2;
        led3 = &led3;
        sw0 = &button0;
        modem = &usart1;
        pwm-buzzer = &pwm0;        
        pwm-led0 = &white_pwm_led;
        pwm-led1 = &red_pwm_led;
        pwm-led2 = &green_pwm_led;
        pwm-led3 = &blue_pwm_led;
        white-led = &led0;
        red-led = &led1;
        green-led = &led2;
        blue-led = &led3;
        white-pwm-led = &white_pwm_led;
        red-pwm-led = &red_pwm_led;
        green-pwm-led = &green_pwm_led;
        blue-pwm-led = &blue_pwm_led;
    };

    leds {
        compatible = "gpio-leds";

        led0: led_0 {
            gpios = <&gpioc GECKO_PIN(7) GPIO_ACTIVE_HIGH>;
        };
        led1: led_1 {
            gpios = <&gpioc GECKO_PIN(8) GPIO_ACTIVE_HIGH>;
        };
        led2: led_2 {
            gpios = <&gpioc GECKO_PIN(9) GPIO_ACTIVE_HIGH>;
        };
        led3: led_3 {
            gpios = <&gpioc GECKO_PIN(10) GPIO_ACTIVE_HIGH>;
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpiob GECKO_PIN(13) GPIO_ACTIVE_LOW>;
        };
    };

    pwmleds {
        compatible = "pwm-leds";
        white_pwm_led: white_pwm_led {
            pwms = <&pwm1 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
        };
        red_pwm_led: red_pwm_led {
            pwms = <&pwm2 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
        };
        green_pwm_led: green_pwm_led {
            pwms = <&pwm3 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
        };
        blue_pwm_led: blue_pwm_led {
            pwms = <&pwm4 3 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
        };
    };

    regulator_batt: regulator-bat-chg {
        regulator-name = "bq24250rge";
        regulator-boot-on;
    };
};

&cpu0 {
    clock-frequency = <38400000>;
};

&usart0 {
    current-speed = <115200>;
    status = "okay";   
    pinctrl-0 = <&usart0_default>;
    pinctrl-names = "default";
};

&usart1 {
    current-speed   = <115200>;
    location-rx     = <GECKO_LOCATION(20) GECKO_PORT_D GECKO_PIN(13)>;
    location-tx     = <GECKO_LOCATION(20) GECKO_PORT_D GECKO_PIN(12)>;
    location-cts    = <GECKO_LOCATION(15) GECKO_PORT_D GECKO_PIN(11)>;    
    location-rts    = <GECKO_LOCATION(13) GECKO_PORT_D GECKO_PIN(10)>;
//    hw-flow-control;
    status = "okay";
    
    murata_1sc: murata_1sc {
        compatible = "murata,1sc";
        mdm-wake-host-gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
        mdm-wake-mdm-gpios  = <&gpiod 15 GPIO_ACTIVE_HIGH>;
        mdm-rst-done-gpios  = <&gpiod 9 GPIO_ACTIVE_HIGH>;
        mdm-reset-gpios     = <&gpiod 8 GPIO_ACTIVE_HIGH>;
	mdm-rx-gpios        = <&gpiod 13 GPIO_ACTIVE_HIGH>;
	mdm-tx-gpios        = <&gpiod 12 GPIO_ACTIVE_HIGH>;
	mdm-cts-gpios       = <&gpiod 11 GPIO_ACTIVE_HIGH>;
	mdm-rts-gpios       = <&gpiod 10 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };
};

&usart3 {
    compatible = "silabs,gecko-spi-usart";    
    location-clk = <GECKO_LOCATION(16) GECKO_PORT_C GECKO_PIN(0)>;
    location-rx = <GECKO_LOCATION(19) GECKO_PORT_C GECKO_PIN(2)>;
    location-tx = <GECKO_LOCATION(21) GECKO_PORT_C GECKO_PIN(3)>;
    cs-gpios = <&gpioc 1 GPIO_ACTIVE_LOW>;
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    w25q64: w25q64jw@0 {
             compatible = "jedec,spi-nor";
             reg = <0>;
             spi-max-frequency = <6400000>;
             // note size is in bits
             size = <0x04000000>;
             jedec-id = [ef 60 17];
             sfdp-bfp = [ 
                    e5 20 f9 ff ff ff ff 07 44 eb 08 6b 08 3b 42 bb
                    fe ff ff ff ff ff 00 00 ff ff 40 eb 0c 20 0f 52
                    10 d8 00 00 36 02 a6 00 82 ea 14 c9 e9 63 76 33
                    7a 75 7a 75 f7 a2 d5 5c 19 f7 4d ff e9 30 f8 80
             ];
            status = "okay";
            partitions {
                    compatible = "fixed-partitions";
                    #address-cells = <1>;
                    #size-cells = <1>;
                    // Set of storage for entire of the 4096Kb of flash
                    storage_partition1: partition@0 {
                            reg = <0x00000000 0x00800000>;
                    };
            };
     };
};               

&usart2 {
    compatible = "silabs,gecko-spi-usart";

    location-clk = <GECKO_LOCATION(3) GECKO_PORT_I GECKO_PIN(0)>;
    location-rx = <GECKO_LOCATION(6) GECKO_PORT_I GECKO_PIN(2)>;
    location-tx = <GECKO_LOCATION(8) GECKO_PORT_I GECKO_PIN(3)>;
    cs-gpios = <&gpioi 1 GPIO_ACTIVE_LOW>;
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    rs9116w: rs9116w@0 {
        compatible = "silabs,rs9116w";
        reg = <0>;
        spi-max-frequency = <6400000>;
        int-gpios = <&gpioa 6 GPIO_ACTIVE_HIGH>;   // input
        reset-gpios = <&gpioa 9 GPIO_ACTIVE_LOW>;  // output should be initialized LOW
        sleep-wake-indication-gpios = <&gpioa 5 GPIO_ACTIVE_LOW>;  // input
        wake-on-wireless-gpios = <&gpioa 3 GPIO_ACTIVE_HIGH>;  // input
        sleep-wake-confirmation-gpios = <&gpioa 4 GPIO_ACTIVE_HIGH>; // output should be initialized HIGH
        poc-gpios = <&gpioa 8 GPIO_ACTIVE_LOW>;    // output should be initialized LOW
        status = "okay";
    };
};

